{
    "title": "Journal of Something",
    "contactname": "Sydney B. Someone",
    "contactemail": "sydney@someone.net",
    "importreplacements": {
        " -- ": "---",
        "\\. \\. \\.": "…",
        "\\[\\.\\.\\.\\]": "…",
        "\\[…\\]": "…",
        "\\b([A-Z])\\. ?([A-Z])\\. ?([A-Z])\\.": "\\1. \\2. \\3.",
        "\\b([A-Z])\\. ?([A-Z])\\.": "\\1. \\2."
    },
    "assignmentTypes": {
        "article": {
            "createEdition": [
                {
                    "command": "pandoc --metadata-file metadata.yaml --wrap preserve --number-sections --citeproc --bibliography bibliography.json --resource-path .:%projectdir% --reference-location=block -t epub -o %documentid%-%version%.epub main.md",
                    "outputfile": "%documentid%-%version%.epub"
                },
                {
                    "command": "pandoc --metadata-file metadata.yaml --wrap preserve --embed-resources --standalone --number-sections --citeproc --bibliography bibliography.json --resource-path .:%projectdir% --reference-location=block -t html -o %documentid%-%version%.html main.md",
                    "outputfile": "%documentid%-%version%.html"
                },
                {
                    "command": "cp main.md %documentid%-%version%.md",
                    "outputfile": "%documentid%-%version%.md"
                },
                {
                    "command": "pandoc --metadata-file metadata.yaml --number-sections --citeproc --bibliography bibliography.json --resource-path .:%projectdir% -t pdf -o %documentid%-%version%-tmp.pdf main.md && gs -dNOPAUSE -dFastWebView -sDEVICE=pdfwrite -sOUTPUTFILE=%documentid%-%version%.pdf -dBATCH %documentid%-%version%-tmp.pdf && rm %documentid%-%version%-tmp.pdf",
                    "outputfile": "%documentid%-%version%.pdf"
                },
                {
                    "command": "php -r 'echo json_decode(file_get_contents(\"metadata.json\"))->abstract;' | pandoc -f markdown -t plain --wrap none -o abstract.txt",
                    "outputfile": "abstract.txt"
                },
                {
                    "command": "echo \"\" | pandoc --metadata-file metadata.yaml --citeproc --bibliography bibliography.json --resource-path .:%projectdir% --wrap none -t plain -o references.txt",
                    "outputfile": "references.txt"
                },
                {
                    "command": "cd editions/%version% && zip ../../%documentid%-%version%.zip *",
                    "outputfile": "%documentid%-%version%.zip"
                }
            ],
            "output": {
                "pdf": {
                    "editorcommand": "pandoc --metadata-file metadata.yaml --number-sections --citeproc --bibliography bibliography.json --resource-path .:%projectdir% -t pdf -o %outputfile% %rootdocument%"
                },
                "html": {
                    "editorcommand": "pandoc --metadata-file metadata.yaml --wrap preserve --embed-resources --standalone --number-sections --citeproc --bibliography bibliography.json --resource-path .:%projectdir% --reference-location=block -t html -o %outputfile% %rootdocument%"
                },
                "epub": {
                    "editorcommand": "pandoc --metadata-file metadata.yaml --wrap preserve --number-sections --citeproc --bibliography bibliography.json --resource-path .:%projectdir% --reference-location=block -t epub -o %outputfile% %rootdocument%"
                }
            },
            "splitsentences": true,
            "convert": "pandoc %upload% -t markdown --quiet --reference-location=block --wrap=none",
            "metadata": {
                "title": {
                    "required": true,
                    "label": "Title",
                    "inputtype": "text",
                    "pandoc": "yaml"
                },
                "subtitle": {
                    "required": false,
                    "label": "Subtitle",
                    "inputtype": "text",
                    "pandoc": "yaml"
                },
                "author": {
                    "subcategories": true,
                    "label": "Author(s)",
                    "name": {
                        "required": true,
                        "inputtype": "text",
                        "label": "Name",
                        "pandoc": "subelement"
                    },
                    "affiliation": {
                        "required": false,
                        "inputtype": "text",
                        "label": "Affiliation",
                        "pandoc": "subelement"
                    },
                    "email": {
                        "required": false,
                        "inputtype": "email",
                        "label": "Email",
                        "pandoc": "subelement"
                    }
                },
                "volume": {
                    "required": true,
                    "inputtype": "number",
                    "label": "Volume",
                    "pandoc": "yaml"
                },
                "number": {
                    "required": true,
                    "inputtype": "number",
                    "label": "Number",
                    "pandoc": "yaml"
                },
                "year": {
                    "required": true,
                    "inputtype": "number",
                    "label": "Year",
                    "pandoc": "yaml"
                },
                "specialvoltitle": {
                    "required": false,
                    "inputtype": "text",
                    "label": "Special volume title",
                    "pandoc": "yaml"
                },
                "specialvoleditor": {
                    "subcategories": true,
                    "label": "Special volume editor(s)",
                    "name": {
                        "required": false,
                        "inputtype": "text",
                        "label": "Name",
                        "pandoc": "subelement"
                    },
                    "affiliation": {
                        "required": false,
                        "inputtype": "text",
                        "label": "Affiliation",
                        "pandoc": "subelement"
                    },
                    "email": {
                        "required": false,
                        "inputtype": "email",
                        "label": "Email",
                        "pandoc": "subelement"
                    }
                },
                "keywords": [{
                    "required": false,
                    "inputtype": "text",
                    "separator": ",",
                    "label": "Keywords",
                    "pandoc": "yamlarray"
                }],
                "abstract": {
                    "required": true,
                    "label": "Abstract",
                    "inputtype": "textarea",
                    "pandoc": "yamlblock"
                }
            },
            "display": "[VOLUME.NUMBER] “<em>TITLE</em>”<br>by AUTHOR"
        },
        "review": {
            "convert": "pandoc %upload% -t markdown --quiet --reference-location=block --wrap=none",
            "createEdition": [
                {
                    "command": "pandoc --metadata-file metadata.yaml --wrap preserve --number-sections --citeproc --bibliography bibliography.json --resource-path .:%projectdir% --reference-location=block -t epub -o %documentid%-%version%.epub main.md",
                    "outputfile": "%documentid%-%version%.epub"
                },
                {
                    "command": "pandoc --metadata-file metadata.yaml --wrap preserve --embed-resources --standalone --number-sections --citeproc --bibliography bibliography.json --resource-path .:%projectdir% --reference-location=block -t html -o %documentid%-%version%.html main.md",
                    "outputfile": "%documentid%-%version%.html"
                },
                {
                    "command": "cp main.md %documentid%-%version%.md",
                    "outputfile": "%documentid%-%version%.md"
                },
                {
                    "command": "pandoc --metadata-file metadata.yaml --number-sections --citeproc --bibliography bibliography.json --resource-path .:%projectdir% -t pdf -o %documentid%-%version%-tmp.pdf main.md && gs -dNOPAUSE -dFastWebView -sDEVICE=pdfwrite -sOUTPUTFILE=%documentid%-%version%.pdf -dBATCH %documentid%-%version%-tmp.pdf && rm %documentid%-%version%-tmp.pdf",
                    "outputfile": "%documentid%-%version%.pdf"
                },
                {
                    "command": "php -r 'echo json_decode(file_get_contents(\"metadata.json\"))->abstract;' | pandoc -f markdown -t plain --wrap none -o abstract.txt",
                    "outputfile": "abstract.txt"
                },
                {
                    "command": "echo \"\" | pandoc --metadata-file metadata.yaml --citeproc --bibliography bibliography.json --resource-path .:%projectdir% --wrap none -t plain -o references.txt",
                    "outputfile": "references.txt"
                },
                {
                    "command": "cd editions/%version% && zip ../../%documentid%-%version%.zip *",
                    "outputfile": "%documentid%-%version%.zip"
                }
            ],
            "output": {
                "pdf": {
                    "editorcommand": "pandoc --number-sections --citeproc --bibliography bibliography.json --resource-path .:%projectdir% -t pdf -o %outputfile% %rootdocument%"
                },
                "html": {
                    "editorcommand": "pandoc --embed-resources --standalone --number-sections --citeproc --bibliography bibliography.json --resource-path .:%projectdir% --reference-location=block -t html -o %outputfile% %rootdocument%"
                },
                "epub": {
                    "editorcommand": "pandoc --number-sections --citeproc --bibliography bibliography.json --resource-path .:%projectdir% --reference-location=block -t epub -o %outputfile% %rootdocument%"
                }
            },
            "splitsentences": true,
            "metadata": {
                "author": {
                    "subcategories": true,
                    "label": "Author(s)",
                    "name": {
                        "required": true,
                        "inputtype": "text",
                        "label": "Name",
                        "pandoc": "subelement"
                    },
                    "affiliation": {
                        "required": false,
