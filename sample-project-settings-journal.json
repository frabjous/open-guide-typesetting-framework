                    "pandoc": "yaml"
                },
                "specialvoleditor": {
                    "subcategories": true,
                    "label": "Special volume editor(s)",
                    "name": {
                        "required": false,
                        "inputtype": "text",
                        "label": "Name",
                        "pandoc": "subelement"
                    },
                    "affiliation": {
                        "required": false,
