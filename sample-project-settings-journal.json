                    },
                    "email": {
                        "required": false,
                        "inputtype": "email",
                        "label": "Email",
                        "pandoc": "subelement"
                    }
                },
                "keywords": [{
                    "required": false,
                    "inputtype": "text",
                    "separator": ",",
                    "label": "Keywords",
                    "pandoc": "yamlarray"
                }]
            },
            "display": "[VOLUME.NUMBER] Review of <em>REVIEWEDTITLE</em><br>by AUTHOR"
        }
    }
}
